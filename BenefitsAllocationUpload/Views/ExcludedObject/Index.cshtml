@using BenefitsAllocation.Core.Domain
@using Newtonsoft.Json
@model IList<BenefitsAllocation.Core.Domain.ExcludedObject>
@{
    ViewBag.Title = "Excluded Objects";
}

@section AdditionalScripts { 
    <script src="@Url.Script("postify.js")" type="text/javascript"></script>
    <script src="@Url.Script("jquery.tmpl.js")" type="text/javascript" charset="utf-8"></script>
    <script src="@Url.Script("jquery.confirm.js")" type="text/javascript"></script>

    <script type="text/javascript">
        $(function() {
            $('.optionExclude').click(function() {
                var clickedBox = $(this);
                var id = clickedBox.prop('id');
                var checked = clickedBox.prop('checked');
                var reqVerificationToken = $('@Html.AntiForgeryToken()').val();

                var postData = $.postify({ Id: JSON.parse(id), IsActive: checked, __RequestVerificationToken: reqVerificationToken });

                $.ajax({
                    url: '@Url.Action("EditJson", "ExcludedObject")',
                    type: 'POST',
                    data: postData,
                    dataType: 'json',
                    traditional: true,
                    success: function(result, status, jqxhr) {
                        // some code after success
                        var message = result.Text;

                        var divAlert = $('div.alert-info', body);
                        if (divAlert.length > 0) {
                            divAlert.html(message);
                        } else {
                            $('#alert-message').tmpl({ "message":message }).prependTo('section.content-wrapper, main-content, clear-fix', body);
                        }
                    },
                    error: function(result) {
                        //alert the error
                        alert(result.ex);
                    }
                });
            });

            $('.delete').click(function(e) {
                var elem = $(this).closest('.item');
                $.confirm({
                    'title': 'Delete Confirmation',
                    'message': 'You are about to delete this item. <br />It cannot be restored at a later time! Continue?',
                    'buttons': {
                        'Yes': {
                            'class': 'blue',
                            'action': function() {
                                var form = $('form', elem);
                                var id = form.prop('Id').value;
                                var reqVerificationToken = $('@Html.AntiForgeryToken()').val();
                                var postData = $.postify({ Id: JSON.parse(id), __RequestVerificationToken: reqVerificationToken });
                                $.ajax({
                                    url: '@Url.Action("DeleteJson", "ExcludedObject")',
                                    type: 'POST',
                                    data: postData,
                                    dataType: 'json',
                                    traditional: true,
                                    success: function(result, status, jqxhr) {
                                        // some code after success
                                        if (result.Success) {
                                            elem.slideUp();
                                        }
                                        var message = result.Text;
                                        var divAlert = $('div.alert-info', body);
                                        if (divAlert.length > 0) {
                                            divAlert.html(message);
                                        } else {
                                            $('#alert-message').tmpl({ "message": message }).prependTo('section.content-wrapper, main-content, clear-fix', body);
                                            //$("#resultMessage").html(message);
                                        }
                                    },
                                    error:
                                        function(result) {
                                            //alert the error
                                            alert(result.ex);
                                        }
                                });
                            }
                        },
                        'No': {
                            'class': 'gray',
                            'action': function() {
                            }	// Nothing to do in this case. You can as well omit the action property.
                        }
                    }
                });
            });
        });
    </script>
    <script id="alert-message" type="text/x-jquery-tmpl">
        <div class="alert alert-info">${message}</div>
    </script>
}

    <h2>@ViewBag.Title</h2>
    <hr/>
    @if (Model.Count > 0)
    {
        @Html.ActionLink("Add New Excluded Object", "Create", null, new {@class = "btn btn-primary"})
        <table>
            <tr>
                <th>&nbsp;</th>
                <th> Object Num </th>
                <th> Is Excluded?</th>
            </tr>
            @foreach (var a in Model)
            {
                <tr class="item">
                <td class="delete">
                    @using (Html.BeginForm("DeleteJson", "ExcludedObject", null, FormMethod.Post, new {@class = "delete-form"}))
                    {
                        @Html.AntiForgeryToken()
                        ;
                        <div id="Id">
                            <input type="hidden" name="Id" value="@JsonConvert.SerializeObject(a.Id)"/>
                        </div>
                        <div id="key-fields"></div>
                        <input type="button" value="Delete" class = "btn btn-warning">
                        }
                </td>
                        <td>@a.ObjectNum</td>
                        <td>
                            <div class="editor-field">
                                @Html.CheckBox("IsActive", a.IsActive, new {@class = "optionExclude", id = @JsonConvert.SerializeObject(a.Id)})
                            </div>
                        </td>
                        </tr>
                    }
        </table>
                <hr/>
                @Html.ActionLink("Add New Excluded Object", "Create", null, new {@class = "btn btn-primary"})
            }
        else
        {
        <div>
            <h3>All excluded objects matching the predetermined criteria are not being reimbursed.</h3>
            <h4>There are no specific excluded objects defined.</h4>
        </div>
        }
        