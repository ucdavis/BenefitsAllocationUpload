@model IList<BenefitsAllocation.Core.Domain.ReimbursableBenefitsAccount>
@{
    ViewBag.Title = "Reimbursable Benefits Accounts";
}

@section AdditionalScripts { 
    <script src="@Url.Script("postify.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function() {
            $('.optionReimburse').click(function() {
                debugger;

                var clickedBox = $(this);
                var id = clickedBox.prop('id');
                var checked = clickedBox.prop('checked');
                var reqVerificationToken = $('@Html.AntiForgeryToken()').val();
                var postData = $.postify({ Id: id, IsActive: checked, __RequestVerificationToken: reqVerificationToken });

                $.ajax({
                    url: '@Url.Action("Edit", "ReimbursableBenefitsAccount")',
                    type: 'POST',
                    //data: "Id=" + id + "&IsActive=" + checked + "&__RequestVerificationToken=" + reqVerificationToken,
                    data: postData,
                    dataType: 'json',
                    //contentType: 'application/json',
                    traditional: true,
                    success: function(result, status, jqxhr) {
                            // some code after success
                            debugger;
                            var message = result.Text;
                            $("#resultMessage").html(message);
                    },
                    error: function(result) {
                        //alert the error
                        alert(result.ex);
                    }
                });
            });
        });
    </script>
}

<h2>@ViewBag.Title</h2>
<div id="resultMessage"></div>
    <hr/>
@if (Model.Count > 0)
{
    @Html.ActionLink("Add New Account", "Create", null, new {@class = "btn btn-primary"})
  <table>
        <tr>
            @*<th>Org Id</th>*@
            <th> Chart </th> 
            <th>&nbsp;</th> 
            <th> Account</th> 
            <th> Is Reimbursable?</th> 
        </tr>
        @foreach (var a in Model)
        {
            <tr>
                @*<td>@a.OrgId</td>*@
                <td>@a.Chart</td>
                <th>&nbsp;</th>
                <td>@a.Account</td>
                <td>
                    <div class="editor-field">
                        @Html.CheckBox("IsActive", a.IsActive, new {@class = "optionReimburse", id = a.Id})
                    </div>
                </td>
            </tr>
        }
    </table>
    <hr/>
    @Html.ActionLink("Add New Account", "Create", null, new {@class = "btn btn-primary"})
}
else
{
    <div>
        <h3>All accounts matching the predetermined criteria are being reimbursed.</h3>
        <h4>There are no specific reimbursable benefits accounts defined.</h4>
    </div>
}
